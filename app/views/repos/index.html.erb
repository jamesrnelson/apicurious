<div class="row">
  <div class="col-lg-1">
  </div>
  <div class="col-lg-4">
    <%= render partial: 'layouts/profile_info' %>
  </div>
  <div class="col-lg-6">
    <div class="card">
      <%= render partial: 'layouts/inner_nav' %>
      <div class="card-body">
        <% @github_repos.user_repos.each do |repo| %>
          <div class="card">
            <div class="card-body">
              <h3><%= repo.name %></h3>
              <p><%= repo.description %></p>
              <p><%= "#{repo.language} #{repo.forks_count} #{repo.stargazers_count}" %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
